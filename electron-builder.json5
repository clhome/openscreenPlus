{
  appId: "com.openscreenplus.app",
  productName: "OpenScreenPlus",
  directories: {
    output: "release",
  },
  files: ["dist", "dist-electron", "package.json"],
  extraResources: [
    {
      from: "public/wallpapers",
      to: "wallpapers",
      filter: ["**/*"],
    },
  ],
  win: {
    icon: "icons/icons/win/icon.ico",
    target: [
      {
        target: "nsis",
        arch: ["x64"],
      },
    ],
  },
  mac: {
    icon: "icons/icons/mac/icon.icns",
    target: ["dmg"],
  },
  linux: {
    icon: "icons/icons/png",
    target: ["AppImage"],
  },
}
